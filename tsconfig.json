{
  "compilerOptions": {
    "typeRoots": ["./typings"],
    "outDir": "./bin",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es7"
    ],
    "sourceMap": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "types" : [
      "node",
      "mongoose",
      "discord.js"
    ],
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "bin"
  ],
  "include": [
    "src/**/*",
    "src/i18n/*.json"
  ]
} 