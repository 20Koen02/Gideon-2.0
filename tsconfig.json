{
  "compilerOptions": {
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@assets/*": ["assets/*"],
      "@src/*": ["src/*"]
    },
    "typeRoots": ["./typings"],
    "outDir": "./bin",
    "allowJs": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es7"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "types" : [
      "node",
      "mongoose",
      "discord.js",
      "klasa",
      "kurasuta",
      "canvas-constructor",
      "discord.js-lavalink"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "bin"
  ],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}